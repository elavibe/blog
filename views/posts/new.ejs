<% layout('layouts/boilerplate') %>
<body class="d-flex sticky-top text-center text-white bg-dark">
  <div class="cover-container d-flex w-80 h-20 p-1 mx-auto flex-column">
    <header class="mb-auto">
      <!-- <link rel="stylesheet" href="/stylesheets/style.css" /> -->
      <link rel="stylesheet" href="/stylesheets/style.css" />
      <div>
        <nav class="nav nav-masthead justify-content-center float-md-right">
          <a class="nav-link" aria-current="page" href="/">Home</a>
          <a class="nav-link active" href="/posts">Posts</a>
          <a class="nav-link" href="/postits">PostItDrawings</a>
          <a class="nav-link" href="/portfolio">Portfolio</a>
          <% if(!currentUser) { %>
          <a class="nav-link" href="/login">Login</a>
          <a class="nav-link" href="/register">Register</a>
          <% } else { %>
          <a class="nav-link" href="/logout">Logout</a>
          <% } %>
        </nav>
      </div>
    </header>
  </div>
</body>
<div class="row">
  <h1 class="text-center">New Post</h1>
  <div class="col-6 offset-3">
    <form
      action="/posts"
      method="POST"
      novalidate
      class="validated-form"
      enctype="multipart/form-data"
    >
      <div class="mb-3 text-white">
        <label class="form-label" for="title">Title</label>
        <input
          class="form-control"
          type="text"
          id="title"
          name="post[title]"
          required
        />
      </div>
      <div class="mb-3 text-white">
        <label class="form-label" for="date">Date</label>
        <input
          class="form-control"
          type="text"
          id="date"
          name="post[date]"
          required
        />
      </div>
      <div class="mb-3 text-white">
        <label class="form-label" for="image">Add Images</label>
        <input
          type="file"
          name="image"
          id="image"
          multiple
          class="form-control"
        />
      </div>
      <!-- <div class="mb-3">
        <label class="form-label" for="image">Image URL</label>
        <input
          class="form-control"
          type="text"
          id="image"
          name="post[image]"
          required
        />
      </div> -->

      <div class="mb-3 text-white">
        <label class="form-label" for="post">Post</label>
        <textarea
          class="form-control"
          type="text"
          id="post"
          name="post[post]"
          required
        ></textarea>
      </div>
      <div class="mb-3">
        <button class="btn btn-success">Add Post</button>
        <a href="/posts" class="btn btn-secondary">‚Üê Back to All Posts</a>
      </div>
    </form>
  </div>
</div>
